@model TesteNovaVida.Models.Professor

@{
    ViewData["Title"] = "Alterar";
}

<h4 class="mb-0">Alterar Professor</h4>
<hr class="mt-0" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProfessor" />
            <div class="form-group">
                <label asp-for="NomeProfessor" class="control-label">Nome do Professor</label>
                <input asp-for="NomeProfessor" class="form-control" maxlength="100" />
                <span asp-validation-for="NomeProfessor" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Alterar" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<br />

<hr />
<button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Index", "Professors")'">Listar professores</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
